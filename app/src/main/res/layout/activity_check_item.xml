<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CheckItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mtsealove.github.buslinkerpt.Design.TitleView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp">
                <!--하단 화물 확인-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하단 화물"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="15dp"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/items_background"
                        android:padding="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A 파렛트 60박스"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A 파렛트 60박스"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A 파렛트 60박스"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A 파렛트 60박스"
                            android:textSize="18sp" />

                        <View
                            android:layout_marginVertical="10dp"
                            android:layout_width="150dp"
                            android:layout_height="1.5dp"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total 200박스"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:src="@drawable/bus_bottom"
                        android:layout_gravity="right"
                        android:layout_marginRight="-30dp"
                        />
                </FrameLayout>

                <!--상단 화물 확인-->
                <TextView
                    android:layout_marginTop="-10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상단 화물"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="15dp"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/top_items_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/items_background"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="30dp"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A 파렛트 60박스"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A 파렛트 60박스"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A 파렛트 60박스"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A 파렛트 60박스"
                            android:textSize="18sp" />

                        <View
                            android:layout_marginVertical="10dp"
                            android:layout_width="150dp"
                            android:layout_height="1.5dp"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total 200박스"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="250dp"
                        android:layout_marginRight="-10dp"
                        android:src="@drawable/bus_top"
                        android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <com.mtsealove.github.buslinkerpt.Design.HorizontalLogoView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>